<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen" Closed="Window_Closed">
    <Grid>
        <Menu Height="25" Margin="0" VerticalAlignment="Top"/>
        <StatusBar Height="25" Margin="0" VerticalAlignment="Bottom"/>
        <TabControl Margin="0,25">
            <TabItem Header="主页">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="DataGrid_Main" Margin="0"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
